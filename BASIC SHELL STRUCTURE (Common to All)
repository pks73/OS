#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <sys/wait.h>

void main() {
    char cmd[80], *args[10];
    int i;
    
    while(1) {
        printf("myshell$ ");
        gets(cmd);
        
        // Tokenize command
        i = 0;
        args[i] = strtok(cmd, " ");
        while(args[i] != NULL) {
            i++;
            args[i] = strtok(NULL, " ");
        }
        
        // Exit condition
        if(strcmp(args[0], "exit") == 0)
            exit(0);
            
        // Create child process
        if(fork() == 0) {
            execvp(args[0], args);
            perror("exec failed");
            exit(1);
        } else {
            wait(NULL);
        }
    }
}
