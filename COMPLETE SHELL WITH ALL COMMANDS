#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <sys/wait.h>
#include <dirent.h>

// All function definitions here...

void main() {
    char cmd[80], *args[10];
    int i;
    
    while(1) {
        printf("myshell$ ");
        gets(cmd);
        
        // Tokenize
        i = 0;
        args[i] = strtok(cmd, " ");
        while(args[i] != NULL) {
            i++;
            args[i] = strtok(NULL, " ");
        }
        
        if(strcmp(args[0], "exit") == 0) exit(0);
        
        // Check for custom commands first
        if(strcmp(args[0], "typeline") == 0) {
            typeline(args[1], args[2]);
            continue;
        }
        else if(strcmp(args[0], "list") == 0) {
            list(args[1], args[2]);
            continue;
        }
        else if(strcmp(args[0], "search") == 0) {
            search(args[1], args[2], args[3]);
            continue;
        }
        else if(strcmp(args[0], "count") == 0) {
            count(args[1], args[2]);
            continue;
        }
        
        // For other commands, use fork-exec
        if(fork() == 0) {
            execvp(args[0], args);
            perror("exec failed");
            exit(1);
        } else {
            wait(NULL);
        }
    }
}
